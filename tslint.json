{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "rules": {
    "jsx-boolean-value": [true, "never"],
    "jsx-no-multiline-js": false,
    "jsx-no-bind": true,
    "jsx-no-lambda": true,
    "function-name": false,
    "variable-name": [true, "check-format", "allow-leading-underscore"],
    "no-duplicate-imports": false,
    "prefer-template": [true, "allow-single-concat"],
    "import-name": false
  },
  "linterOptions": {
    "exclude": [
      "build"
    ]
  }
}
